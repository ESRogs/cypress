<%= simple_form_for([@test], :html => { :method => submit_method(@test), :multipart => true }) do |f| %>
  <%= f.hidden_field :product_id, :value => @product.id %>

  <h1>Test Information</h1>
  <section id="vendorInfo">
    <dl>
      <dt>Test Name:</dt>
      <dd><%= f.text_field :name, :size=>"20", :class=>"req" %></dd>
      <dt>Description:</dt>
      <dd><%= f.text_field :description, :size=>"20", :class=>"req" %></dd>
    </dl>
    <dl>
      <dt>Proctor:</dt>
      <dd><%= f.text_field :proctor, :size=>"20", :class=>"req" %></dd>
      <dt>Email:</dt>
      <dd><%= f.text_field :proctor_email, :size=>"20", :class=>"req" %></dd>
      <dt>Phone:</dt>
      <dd><%= f.text_field :proctor_tel, :size=>"20", :class=>"req" %></dd>
    </dl>
   
  </section>

  <a id="vendor_submit" class="cmd" onclick="$(this).parent().submit();"><%= submit_text(@test) %></a>
<% end %>