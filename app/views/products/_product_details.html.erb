<%= javascript 'products' %>

<%= form_for([@product], :html => { :method => submit_method(@product) }) do |f| %>
  <%= f.hidden_field :vendor_id, :value => @product.vendor.id %>
  
  <h1>Product Information</h1>
  <section id="vendorInfo">
    <dl class="dl-horizontal">
      <dt><span class="required">*</span>Product Name:</dt>
      <dd><%= f.text_field :name, :size=>"20", :class=>"required" %></dd>
      <dt>Version:</dt>
      <dd><%= f.text_field :version, :size=>"20" %></dd>
    </dl>
    <dl class="dl-horizontal">
      <dt>Description:</dt>
      <dd><%= f.text_field :description, :size=>"20" %></dd>
    </dl>
  </section>


  <div id="validationErrorMessages"></div>
  <input id="product_submit" class="cmd" type="submit" value="<%= submit_text(@product) %>" />
<% end %>